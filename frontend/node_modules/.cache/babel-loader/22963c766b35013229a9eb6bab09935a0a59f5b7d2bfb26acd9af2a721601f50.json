{"ast":null,"code":"import \"core-js/modules/es.iterator.constructor.js\";\nimport \"core-js/modules/es.iterator.filter.js\";\nexport default {\n  name: 'DeviceCenter',\n  data() {\n    return {\n      // 设备和测点统计\n      deviceCount: 186,\n      measurePointCount: 1548,\n      // 设备状态数据\n      deviceStatus: [{\n        name: '正常',\n        count: 142,\n        color: '#34C759'\n      }, {\n        name: '预警',\n        count: 24,\n        color: '#FF9500'\n      }, {\n        name: '故障',\n        count: 8,\n        color: '#FF3B30'\n      }],\n      // 缺陷设备数据\n      defectDevices: [{\n        name: '空压机01',\n        time: '2025-03-15',\n        level: 3,\n        levelText: '严重'\n      }, {\n        name: '水泵系统A',\n        time: '2025-03-16',\n        level: 2,\n        levelText: '中等'\n      }, {\n        name: '电机控制器',\n        time: '2025-03-17',\n        level: 1,\n        levelText: '轻微'\n      }, {\n        name: '电机控制器',\n        time: '2025-03-17',\n        level: 1,\n        levelText: '轻微'\n      }, {\n        name: '电机控制器',\n        time: '2025-03-17',\n        level: 1,\n        levelText: '轻微'\n      }, {\n        name: '电机控制器',\n        time: '2025-03-17',\n        level: 1,\n        levelText: '轻微'\n      }],\n      // 预警状态分布\n      warningDistribution: [{\n        name: '一般提醒',\n        percentage: 45,\n        color: '#5856D6'\n      }, {\n        name: '维修',\n        percentage: 30,\n        color: '#FF9500'\n      }, {\n        name: '警告',\n        percentage: 25,\n        color: '#FF2D55'\n      }],\n      // 功能区数据\n      pendingAlarms: 14,\n      pendingDefects: 7,\n      searchQuery: '',\n      // 设备数据\n      devices: [{\n        id: 1,\n        name: '空压机系统01',\n        status: 'normal',\n        statusText: '正常',\n        image: 'https://placehold.co/200x150?text=空压机01'\n      }, {\n        id: 2,\n        name: '水泵系统A区',\n        status: 'warning',\n        statusText: '预警',\n        image: 'https://placehold.co/200x150?text=水泵A'\n      }, {\n        id: 3,\n        name: '电机控制器-主',\n        status: 'normal',\n        statusText: '正常',\n        image: 'https://placehold.co/200x150?text=电机控制器'\n      }, {\n        id: 4,\n        name: '冷却系统-01',\n        status: 'error',\n        statusText: '故障',\n        image: 'https://placehold.co/200x150?text=冷却系统'\n      }, {\n        id: 5,\n        name: '配电柜A',\n        status: 'normal',\n        statusText: '正常',\n        image: 'https://placehold.co/200x150?text=配电柜A'\n      }, {\n        id: 6,\n        name: '配电柜B',\n        status: 'offline',\n        statusText: '离线',\n        image: 'https://placehold.co/200x150?text=配电柜B'\n      }, {\n        id: 7,\n        name: '空压机系统02',\n        status: 'normal',\n        statusText: '正常',\n        image: 'https://placehold.co/200x150?text=空压机02'\n      }, {\n        id: 8,\n        name: '水泵系统B区',\n        status: 'normal',\n        statusText: '正常',\n        image: 'https://placehold.co/200x150?text=水泵B'\n      }, {\n        id: 9,\n        name: '电机控制器-备',\n        status: 'warning',\n        statusText: '预警',\n        image: 'https://placehold.co/200x150?text=备用控制器'\n      }, {\n        id: 10,\n        name: '冷却系统-02',\n        status: 'normal',\n        statusText: '正常',\n        image: 'https://placehold.co/200x150?text=冷却系统02'\n      }, {\n        id: 11,\n        name: '温控系统',\n        status: 'normal',\n        statusText: '正常',\n        image: 'https://placehold.co/200x150?text=温控系统'\n      }, {\n        id: 12,\n        name: '通风系统',\n        status: 'warning',\n        statusText: '预警',\n        image: 'https://placehold.co/200x150?text=通风系统'\n      }],\n      // 分页控制\n      currentPage: 1,\n      itemsPerPage: 9\n    };\n  },\n  computed: {\n    // 过滤并分页显示设备\n    displayedDevices() {\n      let filtered = this.devices;\n\n      // 搜索过滤\n      if (this.searchQuery) {\n        const query = this.searchQuery.toLowerCase();\n        filtered = filtered.filter(device => device.name.toLowerCase().includes(query));\n      }\n\n      // 计算当前页显示的设备\n      const start = (this.currentPage - 1) * this.itemsPerPage;\n      const end = start + this.itemsPerPage;\n      return filtered.slice(start, end);\n    },\n    // 计算总页数\n    totalPages() {\n      let filtered = this.devices;\n      if (this.searchQuery) {\n        const query = this.searchQuery.toLowerCase();\n        filtered = filtered.filter(device => device.name.toLowerCase().includes(query));\n      }\n      return Math.ceil(filtered.length / this.itemsPerPage);\n    }\n  },\n  methods: {\n    // 搜索设备\n    searchDevices() {\n      this.currentPage = 1; // 重置到第一页\n    },\n    // 切换页面\n    changePage(page) {\n      if (page >= 1 && page <= this.totalPages) {\n        this.currentPage = page;\n      }\n    }\n  }\n};","map":{"version":3,"names":["name","data","deviceCount","measurePointCount","deviceStatus","count","color","defectDevices","time","level","levelText","warningDistribution","percentage","pendingAlarms","pendingDefects","searchQuery","devices","id","status","statusText","image","currentPage","itemsPerPage","computed","displayedDevices","filtered","query","toLowerCase","filter","device","includes","start","end","slice","totalPages","Math","ceil","length","methods","searchDevices","changePage","page"],"sources":["E:\\Wuhuairline\\frontend\\src\\views\\DeviceCenter.vue"],"sourcesContent":["<template>\r\n  <div class=\"device-center\">\r\n    <div class=\"main-container\">\r\n      <!-- 左侧容器 -->\r\n      <div class=\"left-container\">\r\n        <!-- 数据卡片行 - 设备数和测点数 -->\r\n        <div class=\"stats-row\">\r\n          <div class=\"stat-card\">\r\n            <div class=\"stat-label\">设备数</div>\r\n            <div class=\"stat-value\">{{ deviceCount }}</div>\r\n          </div>\r\n          <div class=\"stat-card\">\r\n            <div class=\"stat-label\">测点数</div>\r\n            <div class=\"stat-value\">{{ measurePointCount }}</div>\r\n          </div>\r\n        </div>\r\n\r\n        <!-- 设备运行状态卡片 -->\r\n        <div class=\"status-card\">\r\n          <h3 class=\"card-title\">设备运行状态</h3>\r\n          <div class=\"status-chart\">\r\n            <div class=\"status-item\" v-for=\"(item, index) in deviceStatus\" :key=\"index\">\r\n              <div class=\"status-dot\" :style=\"{backgroundColor: item.color}\"></div>\r\n              <div class=\"status-name\">{{ item.name }}</div>\r\n              <div class=\"status-count\">{{ item.count }}</div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n\r\n        <!-- 缺陷设备卡片 -->\r\n        <div class=\"defect-card\">\r\n          <h3 class=\"card-title\">缺陷设备</h3>\r\n          <div class=\"defect-list\">\r\n            <div class=\"defect-item\" v-for=\"(defect, index) in defectDevices\" :key=\"index\">\r\n              <div class=\"defect-icon\">\r\n                <i class=\"fas fa-exclamation-triangle\"></i>\r\n              </div>\r\n              <div class=\"defect-info\">\r\n                <div class=\"defect-name\">{{ defect.name }}</div>\r\n                <div class=\"defect-time\">{{ defect.time }}</div>\r\n              </div>\r\n              <div class=\"defect-level\" :class=\"'level-' + defect.level\">\r\n                {{ defect.levelText }}\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n\r\n        <!-- 预警状态分布卡片 -->\r\n        <div class=\"warning-card\">\r\n          <h3 class=\"card-title\">预警状态分布</h3>\r\n          <div class=\"warning-chart\">\r\n            <div class=\"chart-placeholder\">\r\n              <div class=\"chart-segment\" v-for=\"(segment, index) in warningDistribution\" :key=\"index\"\r\n                  :style=\"{\r\n                    backgroundColor: segment.color,\r\n                    width: segment.percentage + '%'\r\n                  }\">\r\n                <span class=\"segment-label\">{{ segment.name }}: {{ segment.percentage }}%</span>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n\r\n      <!-- 右侧容器 -->\r\n      <div class=\"right-container\">\r\n        <h2 class=\"section-title\">设备详情</h2>\r\n        \r\n        <!-- 顶部功能栏 -->\r\n        <div class=\"function-row\">\r\n          <div class=\"function-card\">\r\n            <div class=\"function-icon\">\r\n              <i class=\"fas fa-bell\"></i>\r\n            </div>\r\n            <div class=\"function-info\">\r\n              <div class=\"function-label\">待处理警报</div>\r\n              <div class=\"function-value\">{{ pendingAlarms }}</div>\r\n            </div>\r\n          </div>\r\n          \r\n          <div class=\"function-card\">\r\n            <div class=\"function-icon\">\r\n              <i class=\"fas fa-wrench\"></i>\r\n            </div>\r\n            <div class=\"function-info\">\r\n              <div class=\"function-label\">待闭环缺陷</div>\r\n              <div class=\"function-value\">{{ pendingDefects }}</div>\r\n            </div>\r\n          </div>\r\n          \r\n          <div class=\"search-container\">\r\n            <input \r\n              type=\"text\" \r\n              class=\"search-input\" \r\n              placeholder=\"搜索设备...\" \r\n              v-model=\"searchQuery\"\r\n              @input=\"searchDevices\"\r\n            >\r\n            <button class=\"search-button\">\r\n              <i class=\"fas fa-search\"></i>\r\n            </button>\r\n          </div>\r\n        </div>\r\n        \r\n        <!-- 设备卡片网格 -->\r\n        <div class=\"device-grid\" ref=\"deviceContainer\">\r\n          <div class=\"device-card\" v-for=\"(device, index) in displayedDevices\" :key=\"index\">\r\n            <div class=\"device-image\">\r\n              <img :src=\"device.image || 'https://placehold.co/200x150?text=设备图片'\" alt=\"设备图片\">\r\n            </div>\r\n            <div class=\"device-info\">\r\n              <div class=\"device-name\">{{ device.name }}</div>\r\n              <div class=\"device-status\" :class=\"'status-' + device.status.toLowerCase()\">\r\n                {{ device.statusText }}\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n        \r\n        <!-- 分页控制 -->\r\n        <div class=\"pagination-controls\" v-if=\"devices.length > 9\">\r\n          <button \r\n            class=\"page-button\" \r\n            :disabled=\"currentPage === 1\"\r\n            @click=\"changePage(currentPage - 1)\"\r\n          >\r\n            <i class=\"fas fa-chevron-left\"></i>\r\n          </button>\r\n          \r\n          <div class=\"page-indicator\">\r\n            {{ currentPage }} / {{ totalPages }}\r\n          </div>\r\n          \r\n          <button \r\n            class=\"page-button\" \r\n            :disabled=\"currentPage === totalPages\"\r\n            @click=\"changePage(currentPage + 1)\"\r\n          >\r\n            <i class=\"fas fa-chevron-right\"></i>\r\n          </button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: 'DeviceCenter',\r\n  data() {\r\n    return {\r\n      // 设备和测点统计\r\n      deviceCount: 186,\r\n      measurePointCount: 1548,\r\n      \r\n      // 设备状态数据\r\n      deviceStatus: [\r\n        { name: '正常', count: 142, color: '#34C759' },\r\n        { name: '预警', count: 24, color: '#FF9500' },\r\n        { name: '故障', count: 8, color: '#FF3B30' },\r\n      ],\r\n      \r\n      // 缺陷设备数据\r\n      defectDevices: [\r\n        { name: '空压机01', time: '2025-03-15', level: 3, levelText: '严重' },\r\n        { name: '水泵系统A', time: '2025-03-16', level: 2, levelText: '中等' },\r\n        { name: '电机控制器', time: '2025-03-17', level: 1, levelText: '轻微' },\r\n        { name: '电机控制器', time: '2025-03-17', level: 1, levelText: '轻微' },\r\n        { name: '电机控制器', time: '2025-03-17', level: 1, levelText: '轻微' },\r\n        { name: '电机控制器', time: '2025-03-17', level: 1, levelText: '轻微' },\r\n      ],\r\n      \r\n      // 预警状态分布\r\n      warningDistribution: [\r\n        { name: '一般提醒', percentage: 45, color: '#5856D6' },\r\n        { name: '维修', percentage: 30, color: '#FF9500' },\r\n        { name: '警告', percentage: 25, color: '#FF2D55' }\r\n      ],\r\n      \r\n      // 功能区数据\r\n      pendingAlarms: 14,\r\n      pendingDefects: 7,\r\n      searchQuery: '',\r\n      \r\n      // 设备数据\r\n      devices: [\r\n        { id: 1, name: '空压机系统01', status: 'normal', statusText: '正常', image: 'https://placehold.co/200x150?text=空压机01' },\r\n        { id: 2, name: '水泵系统A区', status: 'warning', statusText: '预警', image: 'https://placehold.co/200x150?text=水泵A' },\r\n        { id: 3, name: '电机控制器-主', status: 'normal', statusText: '正常', image: 'https://placehold.co/200x150?text=电机控制器' },\r\n        { id: 4, name: '冷却系统-01', status: 'error', statusText: '故障', image: 'https://placehold.co/200x150?text=冷却系统' },\r\n        { id: 5, name: '配电柜A', status: 'normal', statusText: '正常', image: 'https://placehold.co/200x150?text=配电柜A' },\r\n        { id: 6, name: '配电柜B', status: 'offline', statusText: '离线', image: 'https://placehold.co/200x150?text=配电柜B' },\r\n        { id: 7, name: '空压机系统02', status: 'normal', statusText: '正常', image: 'https://placehold.co/200x150?text=空压机02' },\r\n        { id: 8, name: '水泵系统B区', status: 'normal', statusText: '正常', image: 'https://placehold.co/200x150?text=水泵B' },\r\n        { id: 9, name: '电机控制器-备', status: 'warning', statusText: '预警', image: 'https://placehold.co/200x150?text=备用控制器' },\r\n        { id: 10, name: '冷却系统-02', status: 'normal', statusText: '正常', image: 'https://placehold.co/200x150?text=冷却系统02' },\r\n        { id: 11, name: '温控系统', status: 'normal', statusText: '正常', image: 'https://placehold.co/200x150?text=温控系统' },\r\n        { id: 12, name: '通风系统', status: 'warning', statusText: '预警', image: 'https://placehold.co/200x150?text=通风系统' }\r\n      ],\r\n      \r\n      // 分页控制\r\n      currentPage: 1,\r\n      itemsPerPage: 9\r\n    };\r\n  },\r\n  computed: {\r\n    // 过滤并分页显示设备\r\n    displayedDevices() {\r\n      let filtered = this.devices;\r\n      \r\n      // 搜索过滤\r\n      if (this.searchQuery) {\r\n        const query = this.searchQuery.toLowerCase();\r\n        filtered = filtered.filter(device => \r\n          device.name.toLowerCase().includes(query)\r\n        );\r\n      }\r\n      \r\n      // 计算当前页显示的设备\r\n      const start = (this.currentPage - 1) * this.itemsPerPage;\r\n      const end = start + this.itemsPerPage;\r\n      \r\n      return filtered.slice(start, end);\r\n    },\r\n    \r\n    // 计算总页数\r\n    totalPages() {\r\n      let filtered = this.devices;\r\n      if (this.searchQuery) {\r\n        const query = this.searchQuery.toLowerCase();\r\n        filtered = filtered.filter(device => \r\n          device.name.toLowerCase().includes(query)\r\n        );\r\n      }\r\n      return Math.ceil(filtered.length / this.itemsPerPage);\r\n    }\r\n  },\r\n  methods: {\r\n    // 搜索设备\r\n    searchDevices() {\r\n      this.currentPage = 1; // 重置到第一页\r\n    },\r\n    \r\n    // 切换页面\r\n    changePage(page) {\r\n      if (page >= 1 && page <= this.totalPages) {\r\n        this.currentPage = page;\r\n      }\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.device-center {\r\n  color: #ffffff;\r\n  width: 100%;\r\n  padding: 1.5rem;\r\n  box-sizing: border-box;\r\n}\r\n\r\n.main-container {\r\n  display: flex;\r\n  gap: 2%;\r\n  padding-bottom: 2rem; /* 确保底部有足够空间 */\r\n}\r\n\r\n/* 左侧容器样式 */\r\n.left-container {\r\n  width: 35%;\r\n  display: flex;\r\n  flex-direction: column;\r\n  gap: 1.5rem;\r\n}\r\n\r\n/* 右侧容器样式 */\r\n.right-container {\r\n  width: 63%;\r\n  display: flex;\r\n  flex-direction: column;\r\n  background-image: url('@/assets/DeviceCenter/device-card.svg');\r\n  background-size: 100% 100%; /* 强制拉伸背景，可能会变形 */\r\n  background-repeat: no-repeat; /* 禁止重复 */\r\n  background-position: center; /* 确保图片居中 */\r\n}\r\n\r\n/* 统计卡片行 */\r\n.stats-row {\r\n  display: flex;\r\n  gap: 1rem;\r\n  margin-bottom: 0.5rem;\r\n}\r\n\r\n.stat-card {\r\n  flex: